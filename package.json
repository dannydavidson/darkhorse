{
  "name": "darkhorse",
  "version": "0.0.0",
  "description": "Web presence of D23",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./app/**/*.js",
    "debug": "npm run test -- --debug",
    "test-app": "mochify --web-security=false --ignore-ssl-errors=true --transform [ babelify --presets [ react es2015 ] ] --reporter=spec --recursive --timeout=5000",
    "test-unit": "npm run test -- --invert --grep=#integration",
    "test-integration": "npm run test -- --grep=#integration",
    "test": "npm run lint && npm run test-app",
    "build-page": "node ./bin/render-app.js --config ./config/config.json --content ./config/content.json | node ./bin/build-page.js --config ./config/config.json --html ./app/index.html --content ./config/content.json",
    "watch-page": "nodemon -e js,html --watch ./app --watch ./config --exec \"npm run build-page\"",
    "build-app": "browserify -d -t [ babelify --presets [ react es2015 ] --sourceMapRelative . ] -r ./app/browser.js:D23 > ./dist/D23.js && gzip -9 -c ./dist/D23.js > ./dist/D23.js.gz",
    "watch-app": "watchify -d -t [ babelify --presets [ react es2015 ] --sourceMapRelative . ] -r ./app/browser.js:D23 -o ./dist/D23.js",
    "build": "mkdir -p dist && npm run build-app && npm run build-page",
    "dev": "npm run watch-app & npm run watch-page"
  },
  "author": "Danny Davidson",
  "license": "ISC",
  "dependencies": {
    "auth0-lock": "^7.12.2",
    "firebase": "^2.3.2",
    "flexboxgrid": "^6.3.0",
    "history": "^1.13.0",
    "loggly-browserify": "^1.0.4",
    "react": "^0.14.2",
    "react-dom": "^0.14.2",
    "react-router": "^1.0.0",
    "react-waypoint": "^1.1.2",
    "scriptloader": "^1.1.1",
    "velocity-react": "^1.1.1"
  },
  "repository": "git@github.com:dannydavidson/darkhorse.git",
  "devDependencies": {
    "babel": "^6.0.15",
    "babel-preset-es2015": "^6.1.4",
    "babel-preset-react": "^6.1.18",
    "babelify": "^7.2.0",
    "brfs": "^1.4.1",
    "browserify": "^12.0.1",
    "ejsify": "^1.0.0",
    "eslint": "^1.10.1",
    "firebase-tools": "^2.1.0",
    "handlebars": "^4.0.5",
    "jsonfile": "^2.2.3",
    "livereactload": "^2.1.0",
    "minifyify": "^7.1.0",
    "node-jsx": "^0.13.3",
    "nodemon": "^1.8.1",
    "packageify": "^0.2.3",
    "postcss-cli": "^2.3.2",
    "react-proxy": "^1.1.1",
    "watchify": "^3.6.1",
    "yargs": "^3.30.0"
  }
}
